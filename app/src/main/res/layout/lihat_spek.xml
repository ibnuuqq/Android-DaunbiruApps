<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="19dp"
            android:textColor="#fff"
            android:background="@drawable/buat_productinfo"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/nama_software"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#3888d9"
            android:gravity="center"
            android:layout_marginHorizontal="10sp"
            android:text="Nama Produk"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specification"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="19dp"
            android:textColor="#fff"
            android:background="@drawable/buat_productinfo"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/versi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Spek"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tanggal_software"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Value Spek"/>
</LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="19dp"
            android:textColor="#fff"
            android:background="@drawable/buat_productinfo"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            android:text="Deskripsi dari sub"
            android:layout_marginTop="10dp"
            android:gravity="left"/>

    </LinearLayout>
</ScrollView>